{
  "manifest_version": 2,
  "name": "DeepSeek Chat Tracker",
  "version": "1.0.0",
  "description": "Track your DeepSeek chat usage and get warnings",
  
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "notifications"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_title": "DeepSeek Tracker",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "browser_style": false
  },
  
  "content_scripts": [
    {
      "matches": ["*://chat.deepseek.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}