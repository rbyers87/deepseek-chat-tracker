{
  "manifest_version": 2,
  "name": "DeepSeek Chat Tracker",
  "version": "1.0.0",
  "description": "Tracks DeepSeek chat usage and notifies when approaching limits",
  
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "notifications"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["*://chat.deepseek.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "deepseek-tracker@yourdomain.com",
      "strict_min_version": "60.0"
    }
  }
}
