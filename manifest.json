{
  "manifest_version": 3,
  "name": "DeepSeek Chat Limit Tracker",
  "version": "1.0.0",
  "description": "Tracks DeepSeek chat usage and notifies when approaching limits",
  
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "*://chat.deepseek.com/*",
    "*://*.deepseek.com/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://chat.deepseek.com/*", "*://*.deepseek.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
